<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/mainblue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mainblue">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="#0280B0" />

        <com.cxb.tools.NewsTab.HorizontalTabListScrollView
            android:id="@+id/htlsv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/img_add"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_add" />

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/htlsv_list"
            android:layout_marginBottom="4dp"
            android:background="@mipmap/bg_gradient_blue" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </LinearLayout>
</LinearLayout>
