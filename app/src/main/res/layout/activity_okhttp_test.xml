<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/meituan_green"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_change_url"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/btn_change_url" />

            <Button
                android:id="@+id/btn_get_today_weather"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/btn_get_weather" />

            <Button
                android:id="@+id/btn_get_weather"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/btn_post_weather" />

            <Button
                android:id="@+id/btn_get_github_info"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/btn_get_okhttp_msg"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_authenticator"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/btn_get_verification_msg"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_download"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/btn_download_file"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_get_app_version"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/btn_get_app_version" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:typeface="serif"
                tools:text="ABCDEFGHIJKLMNOPQRSTUVWXYZ" />

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_version1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/grass"
            android:gravity="center"
            android:hint="@string/text_current_version"
            android:inputType="date"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_version2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/btn_blue_normal"
            android:gravity="center"
            android:hint="@string/text_network_version"
            android:inputType="date"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_compare_version"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/btn_compare_two_version" />


</LinearLayout>
