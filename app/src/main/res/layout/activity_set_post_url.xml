<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_set_url"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:padding="5dp"
        tools:ignore="LabelFor,TextFields" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_use_default_url"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_md_style"
            android:text="@string/btn_test_server_url"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_use_true_url"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_md_style"
            android:text="@string/btn_official_server_url"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_use_custom_url"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_md_style"
            android:text="@string/btn_custion_server_url"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_set_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_gray_md_style"
            android:text="@string/btn_set_url_confirm" />

        <Button
            android:id="@+id/btn_clear_all_data"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gray_md_style"
            android:text="@string/btn_clear_sharedpreferences"
            android:textAllCaps="false"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
