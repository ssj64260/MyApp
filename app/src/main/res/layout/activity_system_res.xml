<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11141A"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_get_permissions"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/selector_bg_red_iselectable"
                android:gravity="center"
                android:text="@string/btn_get_system_permission"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_get_ablum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_bg_red_iselectable"
                android:gravity="center"
                android:text="@string/btn_get_ablum_resourcd"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_get_photo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_bg_red_iselectable"
                android:gravity="center"
                android:text="@string/btn_take_photo"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_get_contacts"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_bg_red_iselectable"
                android:gravity="center"
                android:text="@string/btn_get_contacts"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
