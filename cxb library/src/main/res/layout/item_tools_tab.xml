<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_weight_80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_tab"
    android:background="@drawable/selector_bg_iselectable">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/custom_weight_40dp"
        android:layout_height="@dimen/custom_weight_40dp"
        tools:src="@mipmap/ic_abra"
        tools:background="@drawable/shape_cycle_lightblue"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        tools:text="预约"
        android:textSize="@dimen/textsize_12sp"
        android:textColor="@color/gray20"/>
</LinearLayout>
